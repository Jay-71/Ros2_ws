<?xml version="1.0"?>
<robot name="simple_robot">

  <link name="base_link">

    <!-- VISUAL -->
    <visual>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <!-- COLLISION -->
    <collision>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
    </collision>

    <!-- INERTIAL -->
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0"/>
      <inertia
        ixx="0.1" iyy="0.1" izz="0.1"
        ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>

  </link>

</robot>

